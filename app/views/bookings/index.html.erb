

<body>

<div class="bookings-views">
  <h1>My bookings</h1>
  <div class="bookings-btn">
    <a class="btn btn-bookings" href="#">To come up</a>
    <a class="btn btn-bookings" href="#">Previous</a>
  </div>
</div>

<div class="booking-display">

<h2> To come up </h2>
<%= @bookings.each do |booking| %>
  <% link_to booking_path(booking) do  %>
    <div class="display-future">
      <%= cl_image_tag(booking.car.photo.key,
      width: 400, height: 300, crop: :fill) %>
      <div>
        <h3>Name of the car: <%= booking.car.name %></h3>
        <p>Description of the car: <%= booking.car.description %></p>
      </div>
    </div>
  <% end %>
<% end %>

<h2> Previous </h2>
  <div class="display-previous">

      <div class="display-future first">
          <img src="images/" alt="Pic of the car from previous booking">
          <div>
          <h3>Name of the car</h3>
          <p>Description of the car</p>
      </div>

      <div class="display-future second">
          <img src="images/" alt="Pic of the car from previous booking">
          <div>
          <h3>Name of the car</h3>
          <p>Description of the car</p>
      </div>


    </div>
  </div>









<br>
<ul>
<% @bookings.each do |booking| %>
 <li> <%= booking.car.brand %> <%= booking.start_date %> <%= booking.end_date %> <small> <%= link_to "❌ Cancel booking", booking_path(booking), method: :delete, data: {confirm: "Are you sure?"} %></small> </li>
 <% end %>
 </ul>


</body>

