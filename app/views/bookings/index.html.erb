<div class="container" style="background-color: white; height: 455px;">
<div class="bookings-views text-center">
  <h1>My bookings</h1>
</div>
<div class="d-flex ">
  <div class="booking-card">
    <h2> Upcoming bookings </h2>
    <% @bookings.each do |booking| %>
      <div class="display-future">
        <%= cl_image_tag(booking.car.photo.key, width: 300, crop: :fill) %>
        <div>     
          <p> <%=link_to booking.car.title, car_path(booking.car) %></p>
          <p>£<%= booking.car.price %> per day</p>
          <p><%= booking.start_date %></p>
          <p><%= booking.end_date %></p>
          <p><%= link_to "❌ Cancel booking", booking_path(booking), method: :delete, data: {confirm: "Are you sure?"} %></p>
        </div>
        <% end %>
      </div>
    
  </div>

  <div>
    <h2> Past bookings </h2>
    <p>You have no past bookings</p>
  </div>
</div>
</div>