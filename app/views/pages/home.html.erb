<div class="container">
<h2 class="text-center">Kar Rental</h2>
  <div class="cards">
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <p>Add a location</p>
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      </div>
    <% end %>
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <p>Add a start date</p>
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      </div>
    <% end %>
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <p>Add a end date</p>
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      </div>
    <% end %>
  </div>
</div>

<div class="container my-5">
    <div class="cards">
      <% @cars.each do |car| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1457332253637-21d324d25df9?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80)">
          <%= link_to car.title, car_path(car), class: "link-to-text-color" %>
        </div>
      <% end %>
    </div>
</div>
