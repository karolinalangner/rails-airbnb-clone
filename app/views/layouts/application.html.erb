<!DOCTYPE html>
<html>
  <head>
    <title>Rent-it!</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Bowlby+One+SC&display=swap" rel="stylesheet">
  </head>

  <body>
    <div class="page-container">
      <div class="navbar navbar-expand-sm navbar-light navbar-kar" style="position: sticky; top: 0; z-index: 500">
        <a href="/"><i class="fas fa-car-side"></i></a>
        <h1 style="font-family: 'Bowlby One SC', cursive; color:#390446;">Rent-it!</h1>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
         <%= link_to "Rent your car", "/cars/new", class: "btn btn-flat button-green" %>
          <ul class="navbar-nav mr-auto">

              <% if user_signed_in? %>

                <li class="nav-item">
                <%= link_to "Messages", "#", class: "nav-link" %>
                </li>
                <li class="nav-item dropdown">
                  <% if current_user.photo.attached? %>
                    <%= cl_image_tag current_user.photo.key, width: 40, height: 40, crop: :thumb, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                  <% else %>
                   <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://www.pikpng.com/pngl/m/263-2631740_empty-avatar-png-user-png-clipart.png" style="width: 40px; height: 40px;" />
                  <% end%>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <%= link_to "My bookings", bookings_path , class: "dropdown-item" %>
                    <%= link_to "My account", "#", class: "dropdown-item" %>
                    <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                  </div>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "Login", new_user_session_path, class: "nav-link" %>
                </li>
              <% end %>
          </ul>
         </div>
      </div>
    <div class="content-container">
    <% if notice %>
      <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= alert %>
      </div>
    <% end %>
    <%= yield %>
    </div>

    <div class="footer">
      <div class="footer-links">
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-facebook"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-youtube"></i></a>
      </div>
      <div class="footer-copyright">
        This footer is made by <i class="fas fa-car-side"></i> from London
      </div>
    </div>
  </div>
  </body>
</html>
