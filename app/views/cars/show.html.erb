<div class = "blocks">
    <h1 class="text-center" style="text-shadow: 1px 1px 3px rgba(0,0,0,0.2);"><%= @car.title %><small> - Â£<span id="car_price"><%= @car.price %> </span>/ day</small></h1>
    <br>
    <div class ="container car-photo" style="text-align: center">
      <% if @car.photo.attached? %>
        <%= cl_image_tag @car.photo.key, height: 300, width: 400, crop: :fill %>
        <% end %>
    </div>
    <br>
    <br>
    <div class="container details-booking-container" style="display: grid; grid-template-columns: 2fr 1.5fr; grid-gap: 10px;" >

      <div class= "card container">
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Brand:</strong><br><%= @car.brand %></li>
          <li class="list-group-item"><strong>Model:</strong><br> <%= @car.model %></li>
          <li class="list-group-item"><strong>Description:</strong> <br> <%= @car.description %> </li>
        </ul>
      </div>

      <div class="container card booking-form" style="padding: 10px;">
        <%= simple_form_for [@car, @booking] do |f| %>
          <%= f.input :start_date, as: :string, label: false, input_html: {class: "datepicker form-control", placeholder: "Start date"} %>
          <%= f.input :end_date, as: :string, label: false, input_html: {class: "datepicker form-control", placeholder: "End date"} %>
          <div class="d-flex justify-content-center mb-2">
          <strong>Total Â£</strong><strong id="total_price"><%= @car.price %></strong>
          </div>
          <div class="d-flex justify-content-center">
          <%= f.submit "Book this ðŸš™", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
       <div class="card container about-owner d-flex justify-content-center">
      <p><small>About owner:</small></p>
      <% if @car.user.photo.attached? %>
        <%= cl_image_tag @car.user.photo.key, width: 45, height: 45, crop: :thumb, class: "avatar" %>
      <% else %>
        <img src="https://www.pikpng.com/pngl/m/263-2631740_empty-avatar-png-user-png-clipart.png" style="width: 45px; height: 45px; border-radius:50%; margin: 20px 0px;">
      <% end %>
      <br>
      <p><strong><%= @car.user.name%></strong></p>
      <p><%= @car.user.description %></p>
      </div>
    </div>

    <br>


    <%= link_to 'Back', root_path, class: "btn btn-dark" %>



  </div>
